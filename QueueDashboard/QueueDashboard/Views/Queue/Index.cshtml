
@{
    ViewBag.Title = "Index";
}


<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Get your queue number</h5>
            <div class="row">
                <div class="col-3">Name:</div>
                <div class="col-9">
                    <input type="text" class="form-control" id="queue_name"/>
                    @Html.AntiForgeryToken()
                    <input type="button" class="btn btn-success" id="btnGenerate" value="Generate Number"/>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#btnGenerate').click(function () {
                var name = $('#queue_name').val();
                var token = $('input[name="__RequestVerificationToken"]').val();
                 $.ajax({
                     type: "POST",
                     url: '@Url.Action("GenerateQueueNumber", "Queue")',
                      data: {
                          name: name,
                          __RequestVerificationToken: token
                      },
                     success: function (response) {
                         alert('Success: Queue number: ' + response.queue_number);
                     },
                     error: function () {
                         alert('Internal Server Error.');
                     }
                 });
            });
        });
    </script>
}
